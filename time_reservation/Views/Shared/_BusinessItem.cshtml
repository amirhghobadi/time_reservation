@model Business








<div class="col-12 col-sm-6 col-md-6 col-lg-4">

    <a class="card text-decoration-none" asp-controller="Home" asp-action="Detail" asp-route-id="@Model.id">
        <img src="~/images/admins/@Model.AdminIdB/@Model.Name/@Model.PictureFileName" class="card-img-top" alt="Salon Image">
            <div class="card-body bg-dark text-light">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text card-description">@Model.Description</p>
            </div>
            <div class="card-footer">
            <span class="city-name">
             
                <svg xmlns="http://www.w3.org/2000/svg"  fill="currentColor" class="bi bi-geo-alt" viewBox="0 0 16 16">
                    <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10m0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6" />
                </svg>
                @Model.City
            </span>
            <span class="city-name text-success">
                @{
                    string formattedPrice = Model.Price?.ToString("N0");
                }
                @formattedPrice تومان
            </span>

            </div>
        </a>
  
</div>
